<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logotext"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/header"
            android:text="@string/signUp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpName"
            android:inputType="text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/backgroundColor"
            android:textColor="@color/fontColor"
            android:textColorHint="#888"
            android:textSize="20sp"
            android:hint="@string/nameRequired"
            android:layout_marginBottom="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/customNavy"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpEmail"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/backgroundColor"
            android:layout_marginTop="15dp"
            android:textColor="@color/fontColor"
            android:textSize="20sp"
            android:textColorHint="#888"
            android:hint="@string/emailRequired"
            android:layout_marginBottom="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/customNavy"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_dropdown"
            android:entries="@array/job"
            android:id="@+id/signupProfession"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/customNavy"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpPassword"
            android:inputType="textPassword"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/backgroundColor"
            android:layout_marginTop="15dp"
            android:textColorHint="#888"
            android:textSize="20sp"
            android:textColor="@color/fontColor"
            android:hint="@string/password"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/customNavy"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signUpRetypePassword"
            android:inputType="textPassword"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/backgroundColor"
            android:layout_marginTop="15dp"
            android:textColorHint="#888"
            android:textSize="20sp"
            android:textColor="@color/fontColor"
            android:hint="@string/retypePassword"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#888"
            android:layout_height="wrap_content"
            android:text="@string/registeredSignIn"
            android:id="@+id/globalSigninButton" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/signUpButtons"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/customNavy"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="@string/register"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:id="@+id/signupButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="12dp"
            android:textColor="#888"
            android:text="@string/signUpSocialMedia"
            android:id="@+id/globalSignUpSocialMedia"/>
    </LinearLayout>
</ScrollView>