<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/blog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="blog_title"
        android:textColor="@color/fontColor"
        android:layout_marginLeft="2dp"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/blog_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_title"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/blog_author"
        style="@style/GrayedOutText"
        android:text="blog_date" />

    <TextView
        style="@style/GrayedOutText"
        android:id="@id/blog_author"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_title"
        android:text="blog_author" />

    <TextView
        android:id="@+id/blog_summary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_author"
        android:text="blog_summary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#888"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/blog_summary"/>

</RelativeLayout>