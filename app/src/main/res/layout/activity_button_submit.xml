<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:ignore="MergeRootFrame">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
     <ImageView
         android:layout_height="80dp"
         android:maxHeight="80dp"
         android:layout_marginTop="20dp"
         android:layout_width="wrap_content"
         android:id="@+id/submitLogo"
         android:layout_alignParentLeft="true"
         android:src="@drawable/newlogo"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/submitToButton"
         android:layout_marginLeft="0dp"
         android:layout_marginRight="5dp"
         android:layout_marginTop="25dp"
         android:textColor="@color/fontColor"
         android:layout_toRightOf="@id/submitLogo"
         android:text="@string/submitToButton"
         android:textSize="25sp"/>
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/withResearchICould"
        android:text="@string/withResearchICould"
        android:layout_marginTop="20dp"
        android:textColor="@color/fontColor"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/submitLogo"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="85"
         android:layout_alignParentRight="true"
         android:layout_marginTop="20dp"
         android:layout_marginRight="30dp"
         android:id="@+id/characterCounter"
         android:layout_below="@id/submitLogo"/>
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/characterCounter"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         android:hint="@string/exampleFormDescription"
         android:inputType="textMultiLine"
         android:textColor="@color/fontColor"
         android:id="@+id/description"
         android:lines="5"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/storyImportance"
         android:id="@+id/storyImportance"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="7dp"
         android:layout_below="@+id/description"/>
     <Button
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/storyImportance"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"
             style="@style/signUpButtons"
             android:gravity="center"
             android:text="@string/needAccess"
             android:id="@+id/needAccessButton"/>
     <View
         android:layout_width="match_parent"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:layout_height="1dp"
         android:layout_below="@id/needAccessButton"
         android:id="@+id/verticalLine"
         style="@style/horizontalLine"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="14dp"
         android:layout_marginRight="10dp"
         android:layout_below="@id/verticalLine"
         android:text="@string/formInstructions"/>
