<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <EditText
        android:id="@+id/uri"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="#eee"
        android:textSize="20sp"
        android:inputType="textUri"
        android:imeOptions="actionSend"
        android:textColor="#222"
        android:text="https://www.google.com"/>
    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="45dp"
        android:layout_toRightOf="@id/uri"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_navbar_logo"/>
    <ImageView
        android:id="@+id/imageShare"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:background="#F7882A"
        android:layout_toRightOf="@id/shareButton"
        android:src="@drawable/ic_sharing" />
    <WebView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mWebView"
        android:layout_below="@id/uri"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context="org.openaccessbutton.openaccessbutton.browser.BrowserFragment">
    </WebView>

</RelativeLayout>
